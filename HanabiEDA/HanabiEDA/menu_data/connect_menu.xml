<GuiMenu>
  <size width="800" height = "750"/>
  <!-- NORMAL SCALE -->
  <!--<scale sx="1" sy="1"/>-->
  <!-- SMALL WINDOW, for debugging -->
  <scale sx="0.5" sy="0.5"/>
  <backgBitmap>Hanabi_textures/background.png</backgBitmap>
  <iconBitmap>Hanabi_textures/Fireworks/Blue.png</iconBitmap>
  <title>Hanabi Game - Connect menu</title>
  <elements>
    <GuiImage>
      <position x="400" y="130"/>
      <offset x ="379" y="116"/>
      <imageBitmap>Hanabi_textures/logo.png</imageBitmap>
    </GuiImage>
    <GuiSubmenu>
      <offset x="-400" y="0"/>
      <position x="0" y="250"/>
      <elements>
        <GuiText>
          <position x="-320" y="0"/>
          <text>Name</text>
          <font size="50" type="font.ttf"/>
          <textColor>0xFFFFFFFF</textColor>
        </GuiText>
        <GuiText id="name_textbox">
          <position x="0" y="80"/>
          <textAlign>CENTER</textAlign>
          <text>Hanabi Player</text>
          <font size="30" type="font.ttf"/>
          <textColor>0x000000FF</textColor>
        </GuiText>
        <GuiButton id="name_button">
          <baseBitmap>Hanabi_textures/Others/simple_textbox.png</baseBitmap>
          <position x="0" y="100"/>
          <offset x="281" y="30"/>
        </GuiButton>
      </elements>
    </GuiSubmenu>
    <GuiSubmenu>
      <offset x="-400" y="0"/>
      <position x="0" y="400"/>
      <elements>
        <GuiText>
          <position x="-320" y="0"/>
          <text>IP</text>
          <font size="50" type="font.ttf"/>
          <textColor>0xFFFFFFFF</textColor>
        </GuiText>
        <GuiText id="ip_textbox">
          <position x="0" y="80"/>
          <textAlign>CENTER</textAlign>
          <text>Localhost</text>
          <font size="30" type="font.ttf"/>
          <textColor>0x000000FF</textColor>
        </GuiText>
        <GuiButton id="ip_button">
          <baseBitmap>Hanabi_textures/Others/simple_textbox.png</baseBitmap>
          <position x="0" y="100"/>
          <offset x="281" y="30"/>
        </GuiButton>
      </elements>
    </GuiSubmenu>
    <GuiButton id="connect_button">
      <baseBitmap>Hanabi_textures/Others/connect.png</baseBitmap>
      <hoverBitmap>Hanabi_textures/Others/connect_hover.png</hoverBitmap>
      <clickBitmap>Hanabi_textures/Others/connect_click.png</clickBitmap>
      <position x="400" y="630"/>
      <offset x="150" y="50"/>
      <checkAlpha>true</checkAlpha>
    </GuiButton>
    <GuiText id="message_text">
          <position x="400" y="700"/>
          <textAlign>CENTER</textAlign>
          <textbox color="0x000000F0" up="10" down="0" left="10" right="10" radius="10"/>
          <font size="20" type="font.ttf"/>
          <textColor>0xFFFFFFFF</textColor>
          <visible>false</visible>
        </GuiText>
  </elements>
</GuiMenu>